---
const {
  title,
  description,
  heroImage,
  startDate,
  endDate,
  badge,
  details,
  url,
} = Astro.props;
import { Image } from "astro:assets";
---

<div class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]">
  <a href={url}>
    <div class="hero-content flex-col md:flex-row">
      {
        heroImage && (
          <Image
            width={750}
            height={422}
            format="webp"
            src={heroImage}
            alt={title}
            class="max-w-48 md:max-w-[13rem] max-h-28 rounded-lg object-cover"
          />
        )
      }
      <div class="grow w-full md:p-0">
        <h1 class="text-xl font-bold">
          {title}
          {badge && <div class="badge badge-neutral rounded"> {badge}</div>}
        </h1>        
        <p class="text-1xl">{description}</p>
        <p class="pt-2 text-sm opacity-70">{startDate} - {endDate}</p>        
      </div>
    </div>
  </a>
</div>
